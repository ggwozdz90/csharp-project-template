{
  "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
  "tasks": [
    {
      "name": "dotnet format",
      "group": "pre-commit-operations",
      "command": "dotnet",
      "args": ["format", "--verbosity", "detailed", "--severity", "info"]
    },
    {
      "name": "csharpier",
      "group": "pre-commit-operations",
      "command": "dotnet",
      "args": ["csharpier", ".", "--loglevel", "debug"]
    },
    {
      "name": "dotnet build",
      "group": "pre-push-operations",
      "command": "dotnet",
      "args": ["build"]
    },
    {
      "name": "dotnet test",
      "group": "pre-push-operations",
      "command": "dotnet",
      "args": ["test"]
    }
  ]
}
